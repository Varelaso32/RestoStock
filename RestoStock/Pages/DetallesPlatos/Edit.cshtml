@page
@model RestoStock.Pages.DetallesPlatos.EditModel
@{
    ViewData["Title"] = "Editar Detalle de Plato";
}

<h1 class="text-center mb-4 text-danger">Editar Detalle de Plato</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm p-4">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- ID detalle de plato -->
                <input type="hidden" asp-for="DetallePlato.IdDetalle" />

                <!-- Cantidad -->
                <div class="form-group mb-3">
                    <label asp-for="DetallePlato.Cantidad" class="form-label fw-bold">Cantidad</label>
                    <input asp-for="DetallePlato.Cantidad" class="form-control" type="number" placeholder="Ingrese la cantidad de ingrediente" />
                    <span asp-validation-for="DetallePlato.Cantidad" class="text-danger"></span>
                </div>

                <!-- Ingrediente -->
                <div class="form-group mb-3">
                    <label asp-for="DetallePlato.FkIngredientes" class="form-label fw-bold">Ingrediente</label>
                    <select asp-for="DetallePlato.FkIngredientes" asp-items="Model.IngredientesList" class="form-select">
                        <option value="">-- Seleccione un ingrediente --</option>
                    </select>
                    <span asp-validation-for="DetallePlato.FkIngredientes" class="text-danger"></span>
                </div>

                <!-- Plato -->
                <div class="form-group mb-3">
                    <label asp-for="DetallePlato.FkPlato" class="form-label fw-bold">Plato</label>
                    <select asp-for="DetallePlato.FkPlato" asp-items="Model.PlatosList" class="form-select">
                        <option value="">-- Seleccione un plato --</option>
                    </select>
                    <span asp-validation-for="DetallePlato.FkPlato" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js"></script>
}
