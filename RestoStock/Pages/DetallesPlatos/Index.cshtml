@page
@model RestoStock.Pages.DetallesPlatos.IndexModel
@{
    ViewData["Title"] = "Detalles de Platos";
}

<h1 class="text-center mb-4 text-danger">Detalles de Platos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p class="text-end">
    <a asp-page="Create" class="btn btn-danger">
        <i class="bi bi-plus-circle me-1"></i> Agregar
    </a>
</p>

<div class="table-responsive">
    <table class="table table-hover align-middle table-bordered">
        <thead class="table-danger">
            <tr>
                <th scope="col">#</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DetallesPlatos[0].Cantidad)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DetallesPlatos[0].Ingrediente.Nombre)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DetallesPlatos[0].Plato.Nombre)</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.DetallesPlatos.Count; i++)
            {
                var item = Model.DetallesPlatos[i];
                <tr>
                    <th scope="row" class="fw-bold text-danger text-center">@((i + 1))</th>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ingrediente.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Plato.Nombre)</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.IdDetalle" class="btn btn-outline-danger btn-sm me-2">
                            <i class="bi bi-pencil me-1"></i> Editar
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.IdDetalle" class="btn btn-outline-dark btn-sm">
                            <i class="bi bi-trash me-1"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <style>
        .table-danger {
            background-color: #f8d7da;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-outline-dark:hover {
            background-color: #343a40;
            color: white;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table-bordered {
            border: 1px solid #dc3545;
        }

        .text-danger {
            color: #dc3545 !important;
        }
    </style>
}

@section Scripts {
    <script src="~/js/site.js"></script>
}
