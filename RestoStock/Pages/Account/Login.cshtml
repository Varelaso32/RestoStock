@page
@model RestoStock.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 90vh;">

    <div class="col-md-6 col-lg-4">

        <div class="card shadow-lg border-0 p-4">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <h2 class="text-center mb-4" style="color: #6c757d;">Bienvenido a RestoStock</h2>

                    <div class="form-group mb-3">
                        <label asp-for="User.Email" class="form-label fw-bold">Correo Electrónico</label>
                        <input asp-for="User.Email" type="email" class="form-control" placeholder="Ingresa tu correo electrónico" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>


                    <div class="form-group mb-3">
                        <label asp-for="User.Password" class="form-label fw-bold">Contraseña</label>
                        <input asp-for="User.Password" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>


                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMeCheck" />
                        <label class="form-check-label" for="rememberMeCheck">Recordarme</label>
                    </div>


                    <div class="form-group mt-4 text-center">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed" role="alert" style="top: 20px; right: 20px; width: auto; z-index: 1050;">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
